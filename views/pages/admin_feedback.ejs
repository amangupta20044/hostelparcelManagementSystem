<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/common_admin.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="nav-left">
      <img src="/images/LOGO.png" alt="GGV Logo" class="logo">
      <span class="college-name">GGV</span>
    </div>

    <div class="nav-center">All Feedback</div>

    <div class="nav-right">
      <a href="/admin/dashboard" class="logout-btn">Dashboard</a>
      <a href="/login" class="logout-btn">Logout</a>
    </div>
  </nav>

  <!-- Feedback Table Container -->
  <div class="container">
    <!-- <h2>ğŸ“‹ Feedback Entries</h2> -->

    <!-- Delete All Button -->
    <form action="/feedback/show/deleteAll" method="GET" 
          onsubmit="return confirm('Are you sure you want to delete ALL feedback data?');">
      <button type="submit" class="delete-all-btn">ğŸ—‘ï¸ Delete All Feedback</button>
    </form>

    <!-- Feedback Table -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Role</th>
          <th>Rating</th>
          <th>Comments</th>
          <th>Submitted On</th>
        </tr>
      </thead>

      <tbody>
        <% if (feedbacks.length === 0) { %>
          <tr><td colspan="6">No feedback found.</td></tr>
        <% } else { %>
          <% feedbacks.forEach(f => { %>
            <tr>
              <td><%= f.feedback_id %></td>
              <td><%= f.name %></td>
              <td><%= f.role %></td>
              <td><%= f.rating %> â­</td>
              <td><%= f.comments || '-' %></td>
              <td><%= new Date(f.created_at).toISOString().split('T')[0] %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
